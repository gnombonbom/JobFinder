<Page x:Class="JF.Desktop.Views.Pages.ResumePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:JF.Desktop.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="716" d:DesignWidth="1024"
      Title="ResumePage"
      FontSize="24"
      Loaded="Page_Loaded">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="305"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="75"/>
                <RowDefinition Height="220"/>
            </Grid.RowDefinitions>
            <Label Content="Список резюме"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Top"
                       FontSize="30"
                       FontWeight="Bold"
                       Grid.ColumnSpan="3"/>

            <Label Content="Поиск"
                       VerticalAlignment="Bottom"
                       Margin="20 0 0 0"/>
            <ComboBox x:Name="searchCB"
                          ItemsSource="{Binding}"
                          Height="40"
                          Width="750"
                          HorizontalAlignment="Left"
                          IsTextSearchEnabled="False"
                          Margin="20 0 0 0"
                          IsEditable="True"
                          VerticalAlignment="Top"
                          TextBoxBase.TextChanged="searchCB_TextChanged"
                          Grid.Row="1"
                          Grid.ColumnSpan="3"/>

            <Label Content="Зарплата до"
                       Grid.Column="2"
                       VerticalAlignment="Bottom"
                       HorizontalAlignment="Center"
                       Margin="40 0 0 0"/>
            <TextBox x:Name="salaryBox"
                         Grid.Row="1"
                         Grid.Column="2"
                         Width="200"
                         Height="40"
                         VerticalAlignment="Top"
                         HorizontalAlignment="Right"
                         Margin="0 0 20 0"
                         MaxLength="6"/>

            <Label Content="Город"
                       Grid.Row="1"
                       Margin="20 0 0 40"
                       VerticalAlignment="Center"/>
            <TextBox x:Name="townBox"
                         Grid.Row="1"
                         Height="40"
                         Width="300"
                         Margin="0 40 0 0"/>

            <Label Content="Отрасль"
                       Grid.Row="1"
                       Grid.Column="1"
                       Margin="20 0 0 40"
                       VerticalAlignment="Center"/>
            <ComboBox x:Name="otraslCB"
                         Grid.Row="1"
                         Grid.Column="1"
                         Height="40"
                         Width="300"
                         Margin="0 40 0 0"/>

            <Label Content="График работы"
                       Grid.Row="1"
                       Grid.Column="2"
                       Margin="20 0 0 40"
                       VerticalAlignment="Center"/>
            <ComboBox x:Name="graphCB"
                         Grid.Row="1"
                         Grid.Column="2"
                         Height="40"
                         Width="300"
                         Margin="0 40 0 0"/>

            <Button Content="Поиск"
                         Grid.Column="1"
                         Grid.Row="1"
                         VerticalAlignment="Bottom"
                         Width="150"
                    Click="Button_Click"/>

            <Button Content="Создать Резюме"
                    x:Name="createButton"
                    Grid.Row="1"
                    VerticalAlignment="Bottom"
                    Click="createButton_Click"/>
        </Grid>

        <ListBox x:Name="listBox"
                     Background="LightGray"
                     Grid.Row="1">
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel HorizontalAlignment="Center"/>
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid Background="#FFFFFF" Height="300" Width="950"
                          Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition Height="50"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Label Content="{Binding User.DisplayName}"
                               Grid.ColumnSpan="3"
                               FontSize="24"/>
                        <Label Content="Зарплата"
                               Grid.Column="3"
                               HorizontalAlignment="Center"/>
                        <Label Content="{Binding Salary}"
                               Grid.Column="3"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>

                        <Label Grid.Row="1"
                               Grid.ColumnSpan="3"
                               Content="{Binding Name}"/>
                        <Label Content="{Binding GraphDisplay}"
                               HorizontalAlignment="Center"
                               Grid.Row="1"
                               Grid.Column="3"/>

                        <TextBlock Grid.Row="2"
                                   Grid.ColumnSpan="3"
                                   Text="{Binding Description}"
                                   TextWrapping="Wrap"/>
                        <TextBlock Grid.Row="2"
                               Grid.Column="4"
                               Text="{Binding Email}"
                                   TextWrapping="WrapWithOverflow"/>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Page>
